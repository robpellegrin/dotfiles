alias ....='cd ../../../'
alias ...='cd ../..'
alias ..='cd ..'

alias c='clear'
alias cl='clear'
alias cls='clear; ls'

alias cp='cp -i'
alias df='df -h'
alias dir='dir --color=auto'
alias du='du -h'
alias free='free -h --mega'
alias grep='grep --color=auto'
alias sensors='sensors -f'
alias vdir='vdir --color=auto'
alias view='vim -R'

alias ga='git add'
alias gc='git commit'
alias gd='git diff'
alias gp='git pull'
alias gr='git restore'
alias gs='git status'
alias gu='git restore --staged'
alias push='git push'

alias gcc-warn='gcc -Wall -Wextra -pedantic'
alias j='jobs'
alias py='python3'
alias rp='rsync --progress'

alias clip='xsel -ib'
alias tclip='tmux load-buffer -'

# Prefer eza for `ls`, if installed.
if command -v eza >/dev/null 2>&1; then
  export EZA_FORMAT='selinux=.'
  alias ls='eza -l --icons --hyperlink'
  alias ll='ls'
  alias lla='ls -a'
else
  alias ls='ls -l --color=auto'
  alias ll='ls'
  alias lla='ls -a'
fi

# Prefer `bat` over `cat`, if installed.
if command -v bat >/dev/null 2>&1; then
  alias cat='bat'
fi

pkg_update() {
  if [ -f /etc/debian_version ]; then
    sudo apt update && apt list --upgradable
  elif [ -f /etc/redhat-release ]; then
    sudo dnf check-update
  elif [ -f /etc/SUSE-brand ]; then
    sudo zypper refresh
  else
    echo "Unknown distribution"
    return 1
  fi

  if command -v flatpak >/dev/null 2>&1; then
    flatpak update
  fi
}

pkg_upgrade() {
  if [ -f /etc/debian_version ]; then
    sudo apt upgrade -y
  elif [ -f /etc/redhat-release ]; then
    sudo dnf upgrade -y
  elif [ -f /etc/SUSE-brand ]; then
    sudo zypper update -y
  else
    echo "Unknown distribution"
    return 1
  fi

  if command -v flatpak >/dev/null 2>&1; then
    flatpak update -y
  fi
}

alias update='pkg_update'
alias upgrade='pkg_upgrade'

